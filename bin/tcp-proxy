#! /bin/sh
#
# usage: tcp-proxy <mailsrc-config>
#
# Listen for, receive, parse, and forward mail.
# Each TCP-connection to the proxy is assumed to send a mail and disconnect.
#
set -euf

dirname="`dirname "$0"`"
script="$dirname/../src/main.js"
config="$1"

. "$dirname/usage.sh"; check_args_or_print_usage_and_die "$@"

exec node "$script" "$config" 
