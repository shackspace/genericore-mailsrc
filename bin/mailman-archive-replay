#! /bin/sh
#
# usage: mailman-archive-replay <mailsrc-config> <mailman-archive>
#
# Parse a mailman archive (AKA. gunzip'd "Downloadable version") and forward
# each contained mail.
#
set -euf

readlink="`readlink -f "$0"`"
dirname="`dirname "$readlink"`"
script="`readlink -f "$dirname/../src/mailman-archive-replay.js"`"
config="$1"
archive="$2"

. "$dirname/usage.sh"; check_args_or_print_usage_and_die "$@"

exec node "$script" "$config" "$archive"
